          function loadXMLDoc(url,id)
          {
			if(url.indexOf('?') != -1) {
				url = url + "&xhr=true";
			} else {
				url = url + "?xhr=true";
			}
            if (window.XMLHttpRequest)
            {// code for IE7+, Firefox, Chrome, Opera, Safari
              xmlhttp=new XMLHttpRequest();

              xmlhttp.open("GET",url,false);
              xmlhttp.send(null);
                      if (xmlhttp.responseText != null)
              {
